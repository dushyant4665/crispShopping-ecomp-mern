{
  "version": 2,
  "builds": [
    {
      "src": "client/dbserver.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["client/models/**", "client/config/**"]
      }
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/client/dbserver.js"
    },
    {
      "src": "/(.*)",
      "dest": "/client/build/$1"
    }
  ],
  "env": {
    "MONGODB_URI": "@mongodb_uri",
    "PORT": "8000"
  }
}
